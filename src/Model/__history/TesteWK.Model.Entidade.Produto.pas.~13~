unit TesteWK.Model.Entidade.Produto;

interface

uses
  System.SysUtils, System.Classes, FireDAC.Stan.Intf, FireDAC.Stan.Option,
  FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS, FireDAC.Phys.Intf,
  FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt, Data.DB,
  FireDAC.Comp.DataSet, FireDAC.Comp.Client,
  TesteWK.Classe.Produto;

type
  TModelEntidadeProduto = class(TDataModule)
    qryProdutos: TFDQuery;
    qryProdutoscodigo: TWideStringField;
    qryProdutosdescricao: TWideStringField;
    qryProdutospreco_venda: TFloatField;
  private
    { Private declarations }
  public
    { Public declarations }
    procedure OpenWhere(ClausulaWhere: String = '');
    function GetProduto(const ACodigo: String): TWKProduto;
    function GetProdutos(const ACodigo: String = ''): TListaWKProdutos;
    function GetCodigo(const ANome: String): String;
  end;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

uses
   TesteWK.Model.Conexao;

{$R *.dfm}

{ TModelEntidadeProduto }

function TModelEntidadeProduto.GetProduto(const ACodigo: String): TWKProduto;
begin
   OpenWhere('WHERE codigo = ' + QuotedStr(ACodigo));
   Result := TWKProduto.Create;
   if not qryProdutos.IsEmpty then
      begin
         Result.Codigo := qryProdutos.FieldByName('codigo').AsString;
         Result.Descricao := qryProdutos.FieldByName('descricao').AsString;
         Result.PrecoVenda := qryProdutos.FieldByName('preco_venda').AsFloat;
      end;
end;

function TModelEntidadeProduto.GetProdutos(
  const ACodigo: String): TListaWKProdutos;
var
   AProduto: TWKProduto;
begin
   if ACodigo <> '' then
      OpenWhere('WHERE codigo = ' + QuotedStr(ACodigo))
   else
      OpenWhere();
   Result := TListaWKProdutos.Create;
   if not qryProdutos.IsEmpty then
      begin
         Result.Codigo := qryProdutos.FieldByName('codigo').AsString;
         Result.Descricao := qryProdutos.FieldByName('descricao').AsString;
         Result.PrecoVenda := qryProdutos.FieldByName('preco_venda').AsFloat;
      end;
end;

function TModelEntidadeProduto.GetCodigo(const ANome: String): String;
begin

end;

procedure TModelEntidadeProduto.OpenWhere(ClausulaWhere: String);
begin
   if qryProdutos.Active then
      qryProdutos.Close;
   qryProdutos.MacroByName('clausula_where').Value := ClausulaWhere;
   qryProdutos.Open;
end;

end.
