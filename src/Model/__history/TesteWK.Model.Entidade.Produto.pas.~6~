unit TesteWK.Model.Entidade.Produto;

interface

uses
  System.SysUtils, System.Classes, FireDAC.Stan.Intf, FireDAC.Stan.Option,
  FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS, FireDAC.Phys.Intf,
  FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt, Data.DB,
  FireDAC.Comp.DataSet, FireDAC.Comp.Client;

type
  TModelEntidadeProduto = class(TDataModule)
    qryProdutos: TFDQuery;
    qryProdutoscodigo: TWideStringField;
    qryProdutosdescricao: TWideStringField;
    qryProdutospreco_venda: TFloatField;
  private
    { Private declarations }
  public
    { Public declarations }
    procedure OpenWhere(ClausulaWhere: String = '');
  end;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

uses
   TesteWK.Model.Conexao;

{$R *.dfm}

{ TModelEntidadeProduto }

procedure TModelEntidadeProduto.OpenWhere(ClausulaWhere: String);
begin
   if qryProdutos.Active then
      qryProdutos.Close;
   qryProdutos.MacroByName('clausula_where').Value := ClausulaWhere;
   qryProdutos.Open;
end;

end.
