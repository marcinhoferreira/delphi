unit TesteWK.Classe.Cliente;

interface

uses
   SysUtils, Classes;

type
   TWKCliente = class(TObject)
   private
      { Private declarations }
      fCodigo: String;
      fNome: String;
      fCidade: String;
      fUF: String;
      function GetCidade: String;
      function GetCodigo: String;
      function GetNome: String;
      function GetUF: String;
      procedure SetCidade(const Value: String);
      procedure SetCodigo(const Value: String);
      procedure SetNome(const Value: String);
      procedure SetUF(const Value: String);
   protected
      { Protected declarations }
   public
      { Public declarations }
      property Codigo: String Read GetCodigo Write SetCodigo;
      property Nome: String Read GetNome Write SetNome;
      property Cidade: String Read GetCidade Write SetCidade;
      property UF: String Read GetUF Write SetUF;
   end;

   TArrayClientes = Array Of TWKCliente;

   TListaClientes = class(TObject)
   private
      { Private declarations }
      fItems: TArrayClientes;
   protected
      { Protected declarations }
   public
      { Public declarations }
      function Tamanho: Integer;
      function Add(ACliente: TWKCliente): Integer;
      property Items: TArrayClientes Read fItems Write fItems;
   end;


implementation

{ TWKCliente }

function TWKCliente.GetCidade: String;
begin
   Result := fCidade;
end;

function TWKCliente.GetCodigo: String;
begin
   Result := fCodigo;
end;

function TWKCliente.GetNome: String;
begin
   Result := fNome;
end;

function TWKCliente.GetUF: String;
begin
   Result := fUF;
end;

procedure TWKCliente.SetCidade(const Value: String);
begin
   if Value <> fCidade then
      fCidade := Value;
end;

procedure TWKCliente.SetCodigo(const Value: String);
begin
   if Value <> fCodigo then
      fCodigo := Value;
end;

procedure TWKCliente.SetNome(const Value: String);
begin
   if Value <> fNome then
      fNome := Value;
end;

procedure TWKCliente.SetUF(const Value: String);
begin
   if Value <> fUF then
      fUF := Value;
end;

end.
