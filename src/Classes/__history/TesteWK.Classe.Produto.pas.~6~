unit TesteWK.Classe.Produto;

interface

uses
   SysUtils, Classes;

type
   TWKProduto = class(TObject)
   private
      { Private declarations }
      fCodigo: String;
      fDescricao: String;
      fPrecoVenda: Double;
      function GetCodigo: String;
      function GetDescricao: String;
      function GetPrecoVenda: Double;
      procedure SetCodigo(const Value: String);
      procedure SetDescricao(const Value: String);
      procedure SetPrecoVenda(const Value: Double);
   protected
      { Protected declarations }
   public
      { Public declarations }
      property Codigo: String Read GetCodigo Write SetCodigo;
      property Descricao: String Read GetDescricao Write SetDescricao;
      property PrecoVenda: Double Read GetPrecoVenda Write SetPrecoVenda;
   end;

   TArrayWKProdutos = Array Of TWKProduto;

   TListaWKProdutos = class(TObject)
   private
      { Private declarations }
      fItems: TArrayWKProdutos;
   protected
      { Protected declarations }
   public
      { Public declarations }
      function Tamanho: Integer;
      function Add(AProduto: TWKProduto): Integer;
      property Items: TArrayWKProdutos Read fItems Write fItems;
   end;

implementation

{ TWKProduto }

function TWKProduto.GetCodigo: String;
begin
   Result := fCodigo;
end;

function TWKProduto.GetDescricao: String;
begin
   Result := fDescricao;
end;

function TWKProduto.GetPrecoVenda: Double;
begin
   Result := fPrecoVenda;
end;

procedure TWKProduto.SetCodigo(const Value: String);
begin
   if Value <> fCodigo then
      fCodigo := Value;
end;

procedure TWKProduto.SetDescricao(const Value: String);
begin
   if Value <> fDescricao then
      fDescricao := Value;
end;

procedure TWKProduto.SetPrecoVenda(const Value: Double);
begin
   if Value <> fPrecoVenda then
      fPrecoVenda := Value;
end;

end.
